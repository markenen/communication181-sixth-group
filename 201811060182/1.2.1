//猴子选大王（数组实现）
#include <iostream>
using namespace std;
void king(int m, int n)
{
	int a[200];
	int num = 0, K = 2, i;   //num作为n的标志
	for (i = 0; i < m; i++)
		a[i] = i + 1;     //为猴子编号
	while (K > 1)//当K＝１时表明猴子大王已选到
	{
		K = 0;
		for (i = 0; i < m; i++)
		{
			if (a[i])
				num++;        //记数；
			if (num == n)
				num = a[i] = 0;  //猴子离开此圈；
			if (a[i])
				K++;
		}
	}
	for (i = 0; i < m; i++)
		if (a[i] != 0)
			cout << "Monkey king is:" << i + 1 << endl;
}
int main()
{
	int m, n;
	cout << "Please enter m and n" << endl;
	cin >> m >> n;   //输入m和n的值
	king(m, n);
	return 0;
}
